<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>

        <item name="tabStyle">@style/Widget.App.TabLayout</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialIconButtonStyle">@style/Widget.App.IconButton</item>
        <item name="textInputOutlinedStyle">@style/Widget.App.TextInputOutlined</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/colorPrimaryContainer</item>
        <item name="backgroundColor">@color/colorPrimaryContainer</item>

        <item name="itemTextColor">@color/text_color_selector</item>
        <item name="itemIconTint">@color/navigation_bottom_icon_color_states</item>

        <item name="itemTextAppearanceActive">?textAppearanceBody2</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.App.BottomNavigationView.ActiveIndicator</item>
    </style>

    <style name="Widget.App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
    </style>

    <style name="Widget.App.IconButton" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="android:backgroundTint">#0fff</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabTextColor">@color/text_color_selector</item>
    </style>

    <style name="Widget.App.TextInputOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>
</resources>